<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Radiotherapy Report Web Application System</display-name>
	<description>Radiotherapy Report XML Web Application System</description>

    <filter>
        <filter-name>WebSchemaFilter</filter-name>
        <filter-class>com.yokogawa.theraris.rtWeb.app.servlet.WebSchemaFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>WebSchemaFilter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

	<servlet>
		<servlet-name>ConfiguratorServlet</servlet-name>
		<servlet-class>com.yokogawa.theraris.rtWeb.core.ConfiguratorServlet</servlet-class>
	   <init-param>
			<param-name>rtWebConfigurationDirectory</param-name>
			<param-value>/WEB-INF/conf</param-value>
		</init-param>
		<init-param>
			<param-name>rtWebConfigurationFileName</param-name>
			<param-value>rtWebSchemaConf.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>

	<servlet>
		<servlet-name>RegistServlet</servlet-name>
		<servlet-class>com.yokogawa.theraris.rtWeb.app.servlet.RegistServlet</servlet-class>
		<async-supported>true</async-supported>
	</servlet>

	<servlet>
		<servlet-name>GetFileDataServlet</servlet-name>
		<servlet-class>com.yokogawa.theraris.rtWeb.app.servlet.GetFileDataServlet</servlet-class>
		<async-supported>true</async-supported>
	</servlet>

	<servlet-mapping>
		<servlet-name>RegistServlet</servlet-name>
		<url-pattern>/regist</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GetFileDataServlet</servlet-name>
		<url-pattern>/getFileDataServlet</url-pattern>
	</servlet-mapping>
</web-app>
